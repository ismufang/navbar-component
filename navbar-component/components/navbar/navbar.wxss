/* components/navbar/navbar.wxss */
.nav-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  background: #fff;
  color: #000;
  z-index: 999;
}

.nav-box{
  padding: 0 10px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 36rpx;
  color: #252525;
  font-weight: bold;
  text-align: center;
  width: 50%;
  flex-grow: 1
}

.nav-left, .nav-right{
  width: 100px;
  flex-grow: 0;
  flex-shrink: 0;
}

.nav-capsule-icon .iconfont{
  font-size: 20px;
  color: #252525
}

.nav-capsule {
  width: 70px;
  display: flex;
  align-items: center;
}

.navbar-v-line {
  width: 1px;
  height: 32rpx;
  background-color: #e5e5e5;
  margin-left: 10px
}

.nav-capsule-icon{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center
}

.nav-capsule-icon .icon{
  width: 100%;
  height: 100%
}

.back-home{
  margin-left: 10px
}

